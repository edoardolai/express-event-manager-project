<%- include('../partials/header') %>

    <main class="max-w-3xl mx-auto p-6">
        <div class="bg-white shadow-md rounded-lg p-8">
            <!-- Header -->
            <div class="flex justify-between items-center mb-8">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">
                        <%= event.id ? 'Edit Event' : 'Create Event' %>
                    </h1>
                    <% if (event.created_at) { %>
                        <p class="text-gray-600">Created: <%= event.created_at %>
                        </p>
                        <% } %>
                </div>
            </div>

            <%- include("../partials/error.ejs", { errorMessage: errorMessage }) %>

                <form action="/organizers/event/<%= event.id %>/edit" method="POST" class="space-y-6">
                    <div>
                        <label class="block text-gray-700 mb-2">Event Title</label>
                        <input type="text" name="title" required value="<%= event.title %>"
                            class="w-full p-2 border rounded">
                    </div>

                    <div>
                        <label class="block text-gray-700 mb-2">Event Description</label>
                        <textarea name="description" rows="4"
                            class="w-full p-2 border rounded"><%= event.description %></textarea>
                    </div>

                    <div>
                        <label class="block text-gray-700 mb-2">Event Date</label>
                        <input type="date" name="date" required value="<%= event.event_date %>"
                            class="w-full p-2 border rounded">
                    </div>

                    <div class="grid md:grid-cols-2 gap-6">
                        <!-- Full Price Tickets -->
                        <div class="space-y-4">
                            <h3 class="font-semibold text-gray-800">Full Price Tickets</h3>
                            <div>
                                <label class="block text-gray-700 mb-2">Quantity</label>
                                <input type="number" name="fullPriceCount" min="0"
                                    value="<%= event.full_price_ticket_count %>" class="w-full p-2 border rounded">
                            </div>
                            <div>
                                <label class="block text-gray-700 mb-2">Price (£)</label>
                                <input type="number" name="fullPriceCost" min="0" step="0.50"
                                    value="<%= event.full_price_ticket_cost %>" class="w-full p-2 border rounded">
                            </div>
                        </div>

                        <!-- Concession Tickets -->
                        <div class="space-y-4">
                            <h3 class="font-semibold text-gray-800">Concession Tickets</h3>
                            <div>
                                <label class="block text-gray-700 mb-2">Quantity</label>
                                <input type="number" name="concessionCount" min="0"
                                    value="<%= event.concession_ticket_count %>" class="w-full p-2 border rounded">
                            </div>
                            <div>
                                <label class="block text-gray-700 mb-2">Price (£)</label>
                                <input type="number" name="concessionCost" min="0" step="0.50"
                                    value="<%= event.concession_ticket_cost %>" class="w-full p-2 border rounded">
                            </div>
                        </div>
                    </div>

                    <div class="flex justify-between items-center pt-6">
                        <a href="/organizers/home" class="text-gray-600 hover:text-gray-800">
                            Cancel
                        </a>
                        <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded hover:bg-green-700">
                            <%= event.id ? 'Update Event' : 'Create Event' %>
                        </button>
                    </div>
                </form>
        </div>
    </main>

    <%- include('../partials/footer') %>
